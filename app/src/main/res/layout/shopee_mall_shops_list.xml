<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="160dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shopee_mall_shops_list_card_view"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0.7dp"
        app:strokeColor="#D3DADF">

        <ImageView
            android:id="@+id/shopee_mall_shops_image_view"
            android:layout_width="111dp"
            android:layout_height="133dp"
            android:scaleType="fitStart"
            android:src="@drawable/shopee_mall_shops_example" />


    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-30dp"
        android:translationZ="90dp">

        <TextView
            android:id="@+id/shopee_mall_shops_promo_text_text_view"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="New Arrivals13456"
            android:textColor="@color/shopee_color"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shopee_mall_shops_url_text_view"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>



</LinearLayout>

