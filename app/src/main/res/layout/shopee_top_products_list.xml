<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:padding="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shopee_top_products_list_card_view"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0.7dp"
        app:strokeColor="#D3DADF">

        <ImageView
            android:id="@+id/shopee_top_products_image_view"
            android:layout_width="68dp"
            android:layout_height="64dp"
            android:scaleType="centerInside"
            android:src="@drawable/shopee_top_products_example" />


    </com.google.android.material.card.MaterialCardView>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">

    <TextView
        android:id="@+id/shopee_top_products_name_text_view"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="New Arrivals134sdfazdfgszdfg56"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/shopee_top_products_url_text_view"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>



</LinearLayout>



